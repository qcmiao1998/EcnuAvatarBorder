#background {
  position: fixed;
  width: 100vw;
  height: 100vh;
}

.header, .footer, .title {
  width: 100%;
}

.title {
  margin-bottom: 1em;
}

.header {
  position: fixed;
  top: 0;
}

.footer {
  position: fixed;
  bottom: 0;
}

.hidden {
  display: none;
}

#container {
  position: relative;
  width: 100%;
  overflow: auto;
  padding-bottom: 1em;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
}

#imagediv {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  max-width: 300px;
  max-height: 300px;
}

.avatarimg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.cropper-button {
  z-index: 10;
  position: fixed;
  width: 100%;
  bottom: 2em;
  display: flex;
  justify-content: space-evenly;
}

.cropper-button .button {
  width: 35%;
  max-width: 15em;
}

.borders-outer {
  width: 100%;
  margin: 0.8em 0;
  padding: 0.5em 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF88;
}

#borders {
  width: 95%;
  display: grid;
  grid-template-rows: repeat(2, 1fr);
  grid-auto-flow: column;
  overflow-x: auto;
  gap: 5rpx;
}

.border {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.border image {
  width: 90%;
  height: 90%;
}

.border image.active {
  width: 95%;
  height: 95%;
  box-shadow:0 0 5px #9d2235;
}

#export-and-share {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#export-and-share .button {
  width: 45%;
  max-width: 15em;
  margin: 0.5em 0;
}

button {
  background-color: #ffffffdd !important;
  color: #9d2235 !important;
}

button[disabled] {
  color: #9d223555 !important;
}

button[type=primary] {
  background-color: #9d2235dd !important;
  color: #fff !important;
}
